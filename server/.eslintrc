{
  "extends":                       "airbnb",
  "parser":                        "babel-eslint",
  "env":                           {
    "browser":                     true,
    "node":                        true,
    "es6":                         true,
    "mocha":                       true
  },
  "rules":                         {
    "valid-jsdoc":                 ["error", {
      "requireReturn":             true,
      "requireReturnType":         true,
      "requireParamDescription":   true,
      "requireReturnDescription":  true
    }],
    "space-before-function-paren": ["error", "never"],
    "one-var":                     0,
    "comma-dangle":                0,
    "block-scoped-var":            0,
    "quotes":                      0,
    "prefer-const":                0,
    "func-names":                  0,
    "vars-on-top":                 0,
    "no-var":                      0,
    "no-plusplus":                 0,
    "prefer-arrow-callback":       0,
    "no-param-reassign":           0,
    "eqeqeq":                      1,
    "no-undef":                    0,
    "no-underscore-dangle":        0,
    "object-curly-spacing":        0,
    "no-shadow":                   0,
    "require-jsdoc":               ["error", {
        "require":                 {
            "FunctionDeclaration": true,
            "MethodDefinition":    true,
            "ClassDeclaration":    true
        }
    }]
  }
}
